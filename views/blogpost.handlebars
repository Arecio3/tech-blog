<div id="singlepost">
    <div>
        <h2>{{title}}</h2>
        <p>Posted by {{user.username}} on {{format_date createdAt}}</p>
    </div>
    <section>
        <p>{{text}}</p>
    </section>

    {{!-- Each comment for this post will be here in an each statement --}}

    {{#if loggedIn}}
    <div id="comment">
        <h3>Comment</h3>
        <input type="text" id="commentInput"></input>
        <button type="submit" id="submitBtn">Submit</button>
    </div>
    {{else}}
    <p>Please log in to comment</p>
    {{/if}}
</div>
<script src="/js/comment.js"></script>